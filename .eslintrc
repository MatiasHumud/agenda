{
  "env": {
    "es6": true
  },
  "extends": "airbnb-base",
  "globals": {},
  "parser": "babel-eslint",
  "rules": {
    "function-paren-newline": 0,
    "max-len": [
      "error",
      {
        "code": 100
      }
    ],
    "no-param-reassign":[
      "error",
      {
        "props": false
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id"]
      }
    ],
    "no-warning-comments": "warn"
  }
}
