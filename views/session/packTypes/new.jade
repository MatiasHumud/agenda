						label(for="title") Título
						input(type="text" name="title" placeholder="Título" id="title" class="form-control")
					input(type="hidden" id="zonesString" name="zonesString" value="")
					div(class="form-group")
						label(for="nSessions") Cantidad de zonas
						input(type="number" name="nSessions" placeholder="Ingresa la cantidad de sesiones" id="nSessions" class="form-control")
					div(class="form-group" id="zoneNumber")
						select(class="selectpicker" name="zoneTypes" id="zoneTypes" multiple)
							for tipo in tipos
								option(class="text-secondary" value=tipo)=tipo
