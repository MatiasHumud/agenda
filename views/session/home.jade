extends ../layout.jade

block contenido
	-if (user.permission == "Admin") 
		include ./session_permission/adminActions.jade
	-else if (user.permission == "Branch")
		include ./session_permission/branchActions.jade
	-else if (user.permission == "Resource")
		include ./session_permission/resourceActions.jade
	-else
		include ./session_permission/userActions.jade
		
	div(class="btn-group-vertical default")
			a(href="/session/documentos/new" class="btn btn-default btn-outline-dark btn-lg") Nuevo documento
			div(class="btn btn-default btn-xs")
			a(href="/session/documentos" class="btn btn-default btn-outline-dark btn-lg") Mis documentos